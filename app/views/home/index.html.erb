<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to 'GitHub User Search Engine', root_path, class: "navbar-brand" %>
    </div>
  </div>
</nav>
<div class='container main_area'>
  <div class='row text-center'>
    <h4>Search GitHub user by enter their username</h4>
    <%= form_tag(search_user_path, remote: true, method: "get") do %>
      <%= label_tag(:q, "Username:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search", class: 'btn btn-primary btn-sm') %>
    <% end %>
  </div>
  
  <div id='user_area'></div>
</div>